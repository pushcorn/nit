{
    "name": "@pushcorn/nit",
    "version": "0.9.11",
    "main": "lib/nit.js",
    "description": "A toolbox for building CLI and web apps in a modular way.",
    "bin": "./bin/nit",
    "license": "ISC",
    "files": [
        "bin/**",
        "contrib/**",
        "exts/**",
        "lib/**",
        "public/**",
        "resources/**"
    ],
    "scripts": {
        "lint": "eslint 'public/**/*.js' 'lib/**/*.js' 'exts/**/*.js' 'test/**/*.js'",
        "test": "jest --verbose --coverage"
    },
    "devDependencies": {
        "eslint": "8.21.0",
        "jest": "28.1.3"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./test/setup.js"
        ],
        "testMatch": [
            "**/test/tests/**/*.js"
        ]
    }
}
