#!/usr/bin/env bash

NIT_RESTART_CODE=${NIT_RESTART_CODE:-64}
SOURCE=${BASH_SOURCE[0]}

while [ -h "$SOURCE" ]
do
    BIN_DIR=$(cd $(dirname "$SOURCE") && pwd -P)
    SOURCE=$(readlink "$SOURCE")
    [[ $SOURCE != /* ]] && SOURCE="$BIN_DIR/$SOURCE"
done

NIT_HOME=$(dirname $(cd $(dirname "$SOURCE") && pwd -P))

while true
do
    /usr/bin/env node --experimental-vm-modules --preserve-symlinks --trace-deprecation "$NIT_HOME" "$@"

    if [ "$?" != "$NIT_RESTART_CODE" ]; then
        break
    fi
done
